{
	"manifest_version": 2,
	"name": "SHQ Plugin",
	"description": "SmarterHQ LOIID Return",
	"version": "0.3.2",

	"browser_action": {
        "default_icon": {
        	"19": "images/SHQ_icon19.png",
            "38": "images/SHQ_icon38.png"
        },
        "default_title": "SmarterHQ Plugin",
        "default_popup": "popup.html"
    },

    "content_scripts": [
    	{
    		"matches": [
    			"http://*/*",
		        "https://*/*"
    		],
    		"js":["SmarterCheck.js"],
    		"run_at": "document_end",
    		"all_frames": false
    	}
    ],
    "background": {
        "scripts": ["lib/jquery.1.11.2.js", "lib/jquery-ui.1.11.3.js", "background.js"]
    },
	"permissions": ["notifications", "tabs", "activeTab", "<all_urls>", "cookies"]
}